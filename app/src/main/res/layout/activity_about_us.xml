<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dailynews.penlymeng.com.dailylearning.AboutUsActivity">

    <ImageView
        android:id="@+id/img_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="180dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_margin="16dp"
        android:layout_below="@+id/img_app_logo"
        android:layout_centerHorizontal="true"
        android:text="This app is built in the purpose of education. We aim to provide users the experience of learning by reading news, watching videos, and listening to podcasts."
        android:textSize="21sp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_contact"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txt_desc"
        android:layout_alignParentLeft="true"
        android:text="Contact: +855 86585891"
        android:textSize="21sp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_marginBottom="8dp"
        android:id="@+id/txt_owner"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="developed by Pen Lymeng"
        android:textSize="18sp"
        android:textStyle=""
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
